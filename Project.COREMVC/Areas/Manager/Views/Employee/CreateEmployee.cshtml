@model CreateEmployeePageVM

<form asp-action="CreateEmployee" asp-controller="Employee" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label>Calısanın adını giriniz</label>
        <input asp-for="CreateEmployeeRequestModel.FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Calısanın soyadını giriniz</label>
        <input asp-for="CreateEmployeeRequestModel.LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Calısanın görevini giriniz</label>
        <input asp-for="CreateEmployeeRequestModel.Duty" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Calısanın telefon numarasını giriniz</label>
        <input asp-for="CreateEmployeeRequestModel.MobilePhone" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Calısanın ev adresini giriniz</label>
        <input asp-for="CreateEmployeeRequestModel.Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Calısanın izinli oldugu gün sayısını giriniz</label>
        <input asp-for="CreateEmployeeRequestModel.OffNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Calısan Ekle</button>
    </div>

</form>
