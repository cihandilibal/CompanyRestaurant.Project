@model GetEmployeesPageVM

<h1>
    <span class="text-danger">@TempData["Message"]</span>
</h1>

<section class="panel">
    <header class="panel-heading">
        <h3>Calısanlar</h3>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Calısan ID</th>
                        <th>Calısan Ismi</th>
                        <th>Calısan SoyIsmi</th>
                        <th>Calısanın Görevi</th>
                        <th>Calısanın Telefonu</th>
                        <th>Calısanın Adresi</th>
                        <th>Calısanın Izin Sayısı</th>
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok Et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (GetEmployeesResponseModel item in Model.Employees)
                    {
                        <tr class="gradeX">
                            <td>@item.Id</td>
                            <td> @item.FirstName</td>
                            <td> @item.LastName</td>
                            <td> @item.Duty</td>
                            <td> @item.MobilePhone</td>
                            <td> @item.Address</td>
                            <td> @item.OffNumber</td>
                            <td class="center hidden-phone"><a asp-action="UpdateeEmployee" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a></td>
                            <td class="center hidden-phone"><a asp-action="DeleteEmployee" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                            <td class="center hidden-phone"><a asp-action="DestroyEmployee" asp-route-id="@item.Id" class="btn btn-danger">Yok et</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>