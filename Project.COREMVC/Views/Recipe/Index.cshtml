@model GetRecipesPageVM

Yeni recete detayları eklemek icin <a asp-controller="RecipeDetail" asp-action="AddRecipeDetail">tıklayınız</a>

<h1>
<span class="text-danger">@TempData["Message"]</span>
</h1>

<section class="panel">
    <header class="panel-heading">
        <h3> Urun Receteleri </h3>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Recete ID</th>
                        <th>Recete Adı</th>
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok Et</th>
                    </tr>
                </thead>
              <tbody>
                    @foreach (RecipeResponseModel item in Model.Recipes)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td> @item.Name</td>
                            <td class="center hidden-phone"><a asp-action="UpdateRecipe" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                            <td class="center hidden-phone"><a asp-action="DeleteRecipe" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                            <td class="center hidden-phone"><a asp-action="DestroyRecipe" asp-route-id="@item.ID" class="btn btn-danger">Yok et</a></td>
                        </tr>
                    }
               </tbody>
            </table>

        </div>
    </div>
</section>