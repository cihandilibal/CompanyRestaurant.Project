@model ListOrdersPageVM

Siparis detaylarını gormek icin <a asp-controller="OrderDetail" asp-action="GetOrderDetails">tıklayınız</a>

Yeni siparis detayları eklemek icin <a asp-controller="OrderDetail" asp-action="AddDetail">tıklayınız</a>

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}

<section class="panel">
    <header class="panel-heading">
        <h3> Siparisler </h3>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Siparis ID</th>
                        <th>Masa Numarası</th>
                        <th>Siparis Zamanı</th>
                        <th>Durum</th>
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok Et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (ListOrdersResponseModel item in Model.Orders)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td> @item.TableNo</td>
                            <td> @item.OrderTime</td>
                            <td>@item.Status</td>
                            <td class="center hidden-phone"><a asp-action="UpdateOrder" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                            <td class="center hidden-phone"><a asp-action="DeleteOrder" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                            <td class="center hidden-phone"><a asp-action="DestroyOrder" asp-route-id="@item.ID" class="btn btn-danger">Yok et</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>