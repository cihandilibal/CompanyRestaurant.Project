@model UserRegisterRequestModel
<form asp-action="Register" asp-controller="Home" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label>Kullanıcı ismi giriniz</label>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Sifre giriniz</label>
        <span class="text-danger" asp-validation-for="Password"></span>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email adresi giriniz</label>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Kayıt ol</button>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>

</form>