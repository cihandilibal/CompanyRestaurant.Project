@model UpdateCategoryPageVM

<form asp-action="UpdateCategory" asp-controller="Category" method="post" class="p-3 w-75 m-auto">

    <input type="hidden" asp-for="UpdateCategoryVM.ID" />
    <div class="mb-3">
        <label>Kategori İsmini giriniz</label>
        <input asp-for="UpdateCategoryVM.CategoryName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Acıklama giriniz</label>
        <input asp-for="UpdateCategoryVM.Description" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Kategori Güncelle</button>
    </div>

</form>
