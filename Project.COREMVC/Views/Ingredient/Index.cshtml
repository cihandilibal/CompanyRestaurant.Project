@model IngredientsPageVM

<h1>
    <span class="text-danger">@TempData["Message"]</span>
</h1>

<h3> Stok Listesi</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Amount</th>
            <th>PredictedAmount</th>
            <th>Unit</th>
            <th>UnitPrice</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IngredientResponseModel item in Model.Ingredients)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Amount</td>
                <td>@item.PredictedAmount</td>
                <td>@item.Unit</td>
                <td>@item.UnitPrice</td>
                <td><a asp-controller="Ingredient" asp-action="UpdateIngredient" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                <td><a asp-controller="Ingredient" asp-action="DeleteIngredient" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a asp-controller="Ingredient" asp-action="DestroyIngredient" asp-route-id="@item.ID" class="btn btn-danger">Yok et</a></td>
            </tr>
        }
    </tbody>
</table>

<h2>Total Cost: @Model.TotalCost</h2>
