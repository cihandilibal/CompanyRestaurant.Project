@model GetTablesPageVM

<section class="panel">
    <header class="panel-heading">
        <h3> Masalar </h3>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Masa ID</th>
                        <th>Masa Numarası</th>
                        <th>Masa Durumu</th>
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok Et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (TableResponseModel item in Model.Tables)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td> @item.TableNo</td>
                            <td> @item.Status</td>
                            <td class="center hidden-phone"><a asp-action="UpdateTable" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                            <td class="center hidden-phone"><a asp-action="DeleteTable" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                            <td class="center hidden-phone"><a asp-action="DestroyTable" asp-route-id="@item.ID" class="btn btn-danger">Yok et</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>