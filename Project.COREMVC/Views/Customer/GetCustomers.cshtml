@model GetCustomersPageVM

<h1>
    <span class="text-danger">@TempData["Message"]</span>
</h1>

<section class="panel">
    <header class="panel-heading">
        <h3> Musteriler </h3>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Müsteri ID</th>
                        <th>Müsterinin Adı</th>
                        <th>Müsterinin Soyadı</th>
                        <th>Müsterinin Telefon Numarası</th>
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok Et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (CustomerResponseModel item in Model.Customers)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td> @item.FirstName</td>
                            <td> @item.LastName</td>
                            <td> @item.MobilePhone</td>
                            <td class="center hidden-phone"><a asp-action="UpdateCustomer" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                            <td class="center hidden-phone"><a asp-action="DeleteCustomer" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                            <td class="center hidden-phone"><a asp-action="DestroyCustomer" asp-route-id="@item.ID" class="btn btn-danger">Yok et</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>