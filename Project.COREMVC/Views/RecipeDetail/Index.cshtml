@model RecipeDetailsPageVM

<h1>
    <span class="text-danger">@TempData["Message"]</span>
</h1>
<section class="panel">
    <header class="panel-heading">
        <h3> Recete Icerikleri </h3>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Recete ID</th>
                        <th>Malzeme ID</th>
                        <th>Malzeme Adedi</th>
                        <th>Birim</th>
                        <th>Talimat</th>
                        <th>Durum</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok Et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (RecipeDetailResponseModel item in Model.RecipeDetails)
                    {
                            <tr class="gradeX">
                                <td>@item.RecipeID</td>
                                <td> @item.IngredientID</td>
                                <td> @item.IngredientQuantity</td>
                                <td> @item.Unit</td>
                                <td> @item.Instruction</td>
                                <td> @item.Status</td>
                                <td class="center hidden-phone"><a asp-action="DeleteRecipeDetail" asp-route-recipeId="@item.RecipeID" asp-route-ingredientId="@item.IngredientID" class="btn btn-danger">Sil</a></td>
                                <td class="center hidden-phone"><a asp-action="DestroyRecipeDetail" asp-route-recipeId="@item.RecipeID" asp-route-ingredientId="@item.IngredientID" class="btn btn-danger">Yok et</a></td>
                            </tr>
                        
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>