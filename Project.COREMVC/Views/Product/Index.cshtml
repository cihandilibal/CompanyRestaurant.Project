@model GetProductsPageVM

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}

<section class="panel">
    <header class="panel-heading">
        <h3> Urunler </h3>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Urun ID</th>
                        <th>Urun Adı</th>
                        <th>Birim Fiyatı</th>
                        <th>Birimi</th>
                        <th>Kategori Adı</th>
                        <th>Durum</th>
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok Et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (ProductResponseModel item in Model.Products)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td> @item.ProductName</td>
                            <td> @item.UnitPrice</td>
                            <td> @item.Unit</td>
                            <td> @item.CategoryName</td>
                            <td> @item.Status</td>
                            <td class="center hidden-phone"><a asp-action="UpdateProduct" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                            <td class="center hidden-phone"><a asp-action="DeleteProduct" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                            <td class="center hidden-phone"><a asp-action="DestroyProduct" asp-route-id="@item.ID" class="btn btn-danger">Yok et</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>