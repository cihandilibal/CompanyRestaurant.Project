@model UpdateProductPageVM

<form asp-action="UpdateProduct" asp-controller="Product" method="post" class="p-3 w-75 m-auto">

    <input type="hidden" asp-for="UpdateProductVM.ID" />
    <div class="mb-3">
        <label>Urun adı giriniz</label>
        <input asp-for="UpdateProductVM.ProductName" class="form-control" />
    </div>
    
    <div class="mb-3">
        <label>Kategori ID giriniz</label>
        <input asp-for="UpdateProductVM.CategoryID" class="form-control" />
    </div>
    <div class="mb-3">
        <label>"Birim giriniz</label>
        <input asp-for="UpdateProductVM.Unit" class="form-control" />
    </div>

    <div class="mb-3">
        <label>"Birim fiyat giriniz</label>
        <input asp-for="UpdateProductVM.UnitPrice" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Urun Güncelle </button>
    </div>

</form>
